<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<fx:root alignment="TOP_RIGHT" minHeight="-Infinity" prefWidth="400.0" type="javafx.scene.layout.HBox"
         xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets bottom="15.0" left="10.0" right="10.0" top="15.0"/>
    </padding>
    <Label fx:id="dialog" minHeight="-Infinity"
           style="-fx-background-color: #c3d7f7; -fx-text-fill: #000000; -fx-background-radius: 10; -fx-label-padding: 10;"
           text="Label" wrapText="true">
        <font>
        <Font name="Arial Bold" size="14.0"/>
        </font>
        <HBox.margin>
        <Insets left="10.0" right="10.0"/>
        </HBox.margin>
    </Label>
    <ImageView fx:id="displayPicture" fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
        <HBox.margin>
        <Insets/>
        </HBox.margin>
    </ImageView>
</fx:root>
